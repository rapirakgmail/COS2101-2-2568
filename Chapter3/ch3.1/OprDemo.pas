program VariableExample;
var
  x, y: Integer;
begin
  WriteLn('2+3 = ', 2+3);
  WriteLn('4 div 3 = ', 4 div 3);        // integer division
  WriteLn('4 mod 3 = ', 4 mod 3);        // remainder
  WriteLn('4 / 3 = ', 4 /3 );        // remainder
  WriteLn('2.0+3 = ', 2.0+3);
  WriteLn('2.0+3.0 = ', 2.0+3.0);
  WriteLn('4.0/3.0 = ', 4.0/3.0);    // real division
end.

